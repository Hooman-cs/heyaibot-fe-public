'use client';
import { useState, useEffect } from 'react';
import styles from './ChatHeader.module.css';

const ChatHeader = ({ 
  secondaryColor = 'tomato', 
  primaryColor = '#4a6baf',
  connectionStatus = 'connected', 
  onClose,
  apiBaseUrl = '', 
  backendApiKey = '' // API key for backend
}) => {
  const [websiteTitle, setWebsiteTitle] = useState('Support');
  const [status, setStatus] = useState({ text: 'Connecting...', color: '#FF9800' });
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    const fetchWebsiteByApiKey = async () => {
      if (!backendApiKey || !apiBaseUrl) {
        console.warn('Missing API key or base URL');
        setWebsiteTitle('Support');
        setStatus({ text: 'Configuration Error', color: '#F44336' });
        setIsLoading(false);
        return;
      }

      try {
        
        
        // Use the API endpoint with API key as query parameter
        const response = await fetch(`${apiBaseUrl}/api/websites/header?apiKey=${encodeURIComponent(backendApiKey)}`, {
          method: 'GET',
          headers: { 
            'Content-Type': 'application/json'
          }
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
   

        if (data.success && data.item) {
          // Use data.item (not data.data) - based on your API response
          const websiteData = data.item;
          
          // Set website name from the response
          setWebsiteTitle(websiteData.websiteName || 'Support');
          
          // Check if website is active
          if (websiteData.status === 'active') {
            setStatus({ text: 'Online', color: '#4CAF50' });
            
          } else {
            setStatus({ text: 'Offline', color: '#F44336' });
            console.warn('‚ö†Ô∏è Website found but status is inactive');
          }
        } else {
          console.warn('‚ùå No website found with this API key:', data.error);
          setWebsiteTitle('Support');
          setStatus({ text: 'Not Found', color: '#F44336' });
        }
      } catch (error) {
        console.error('üí• Error fetching website config:', error);
        setWebsiteTitle('Support');
        setStatus({ text: 'Connection Error', color: '#F44336' });
      } finally {
        setIsLoading(false);
      }
    };

    fetchWebsiteByApiKey();
  }, [apiBaseUrl, backendApiKey]);

  return (
    <div className={styles.chatHeader} style={{ 
      backgroundColor: secondaryColor,
      borderBottom: `1px solid ${primaryColor}20`
    }}>
      <div className={styles.headerContent}>
        <div className={styles.headerInfo}>
          <div className={styles.avatarContainer}>
            <div className={styles.medicalAvatar}>üë®</div>
            <div 
              className={styles.statusIndicator} 
              style={{ backgroundColor: status.color }}
              title={status.text}
            />
          </div>
          
          <div className={styles.titleContainer}>
            <h2 className={styles.title}>
              {isLoading ? 'Loading...' : websiteTitle}
            </h2>
            <div className={styles.statusText} style={{ color: status.color }}>
              {status.text}
            </div>
          </div>
        </div>

        {/* <div className={styles.headerActions}>
          <button 
            className={styles.closeButton}
            onClick={onClose}
            style={{ color: 'white' }}
            aria-label="Close chat"
          >
            √ó
          </button>
        </div> */}
      </div>
    </div>
  );
};

export default ChatHeader;